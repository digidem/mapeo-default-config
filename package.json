{
  "name": "@mapeo/default-config",
  "version": "6.0.0",
  "description": "Mapeo default config (categories, icons, questions)",
  "devDependencies": {
    "comapeocat": "^1.0.0-pre.9",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "build": "mkdirp build && comapeocat build -o build/mapeo-default-config-v${npm_package_version}.comapeocat --version ${npm_package_version}",
    "build:dist": "mkdirp dist && comapeocat build -o dist/mapeo-default-config.comapeocat --version ${npm_package_version}",
    "extract-messages": "mkdirp messages && comapeocat extract-messages -o messages/en.json",
    "prepack": "rimraf dist && npm run -s build:dist",
    "test": "comapeocat lint"
  },
  "author": "Gregor MacLennan",
  "license": "CC-BY-NC-4.0",
  "files": [
    "dist"
  ],
  "main": "dist/mapeo-default-config.comapeocat",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digidem/mapeo-default-config.git"
  },
  "keywords": [
    "mapeo"
  ],
  "bugs": {
    "url": "https://github.com/digidem/mapeo-default-config/issues"
  },
  "homepage": "https://github.com/digidem/mapeo-default-config#readme"
}
